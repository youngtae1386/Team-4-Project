{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "extends": "prettier",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "parser": "babel-eslint",
        "no-duplicate-case": "error",
        "no-empty": "error",
        "no-extra-semi": "error",
        "no-func-assign": "error",
        "no-irregular-whitespace": "error",
        "no-unreachable": "error",
        "curly": "error",
        "dot-notation": "error",
        "eqeqeq": "error",
        "no-empty-function": "error",
        "no-multi-spaces": "error",
        "no-unused-vars": "error",
        "camelcase": "error",
        "prefer-arrow-callback":"off",
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "double"
        ],

        "ecmaFeatures": {
            "modules": true,
            "arrowFunctions": true,
            "classes": true
        },
        "env": {
            "es6": true
        },

        "semi": [
            "error",
            "always"
        ],
        "prettier/prettier": "error"
    }
}